+              <div className="flex items-center gap-2 text-xs text-slate-600">
+                <Footprints className="h-4 w-4" />
+                <span>Balanced walking</span>
+              </div>
+            </div>
+            <div className="divide-y">
+              {day.activities?.map((a, j) => (
+                <PlaceCard key={j} a={a} onSwap={onSwap} />
+              ))}
+            </div>
+          </motion.div>
+        ))}
+      </AnimatePresence>
+    </div>
+  )
+}
